{
  "name": "reactjs-express-typescript-app",
  "version": "1.0.0",
  "main": "dist/server/index.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build": "tsc && npm run copy-public && npm run create-zip",
    "copy-public": "copyfiles -u 1 \"public/**/*\" dist",
    "create-zip": "bestzip dist.zip dist/*",
    "dev": "ts-node-dev --respawn --transpile-only src/server/index.ts",
    "start": "node dist/server/index.js > npm-start.log 2>&1",
    "test:selenium": "concurrently --kill-others --success first \"npm start\" \"wait-on http://localhost:3000 && jest tests/selenium.test.ts\"",
    "test:all": "npm run build && npx start-server-and-test start http://localhost:3000 \"jest --runInBand\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.15.11",
    "@types/selenium-webdriver": "^4.1.27",
    "bestzip": "^2.2.1",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "selenium-webdriver": "^4.27.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "wait-on": "^7.2.0"
  }
}
